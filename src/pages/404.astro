---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getPath } from '../utils/paths.js';
---

<Layout title="404 - Página no encontrada | Bajo la Lupa">
  <Header />
  
  <main class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mx-auto text-center py-5">
          <h1 class="display-1 fw-bold text-primary mb-4">404</h1>
          <h2 class="h3 mb-4">Página no encontrada</h2>
          <p class="mb-4" style="color: var(--text-secondary);">
            Lo sentimos, la página que buscas no existe o fue movida.
          </p>
          <a href={getPath('/')} class="btn btn-primary btn-lg">
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .display-1 {
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    animation: fadeInScale 0.6s ease-out;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .display-1 {
      font-size: 5rem;
    }
  }
</style>