---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string;
}

const { 
  title = "Bajo la Lupa - Blog de Finanzas y Mercado",
  description = "Noticias y análisis del mercado financiero, inversiones, criptomonedas y economía global. Mantente informado con Bajo la Lupa.",
  image = "https://cdn2.inversorglobal.com/Cartas-Venta/2025/9.Septiembre/bajo-lupa/logo.png",
  keywords = "finanzas, mercado financiero, inversiones, bolsa, criptomonedas, economía, noticias financieras"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Meta Tags Básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Bajo la Lupa" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Bajo la Lupa" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href={image} />
    <link rel="apple-touch-icon" href={image} />
    
    <!-- Preconnect para optimización -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdn2.inversorglobal.com" />
    
    <!-- Schema.org para Google -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Bajo la Lupa",
        "url": canonicalURL,
        "description": description,
        "publisher": {
          "@type": "Organization",
          "name": "Bajo la Lupa",
          "logo": {
            "@type": "ImageObject",
            "url": image
          }
        }
      }
    </script>
  </head>
  <body>
    <slot />
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<style is:global>
  /* Estilos adicionales específicos del layout */
  html {
    scroll-behavior: smooth;
  }
  
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  main {
    flex: 1;
  }
</style>